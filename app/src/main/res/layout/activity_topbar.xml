<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alpha_30_black"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.demo.wpq.mydemo.customview.view.TopBar
        android:id="@+id/topbar0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"
        app:tLeftBackground="@drawable/topbar_button_bg_selector"
        app:tLeftText="@string/left_text"
        app:tRightBackground="@drawable/topbar_button_bg_selector"
        app:tRightText="@string/right_text"
        app:tTitle="@string/title_text" />

    <com.demo.wpq.mydemo.customview.view.MarqueeTextView
        android:id="@+id/marquee_textView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/remind_bgcolor"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:padding="8dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="滚滚长江东逝水，浪花淘尽英雄，是非成败转头空，青山依旧在，几度夕阳红；白发渔樵江渚上，惯看秋月春风，一壶浊酒喜相逢，古今多少事，都付笑谈中.."
        android:textColor="@color/remind_textcolor"
        android:textSize="14sp" />

    <com.demo.wpq.mydemo.customview.view.TopBar
        android:id="@+id/topbar1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"
        app:tLeftBackground="@drawable/topbar_button_bg_selector"
        app:tLeftText="@string/left_text"
        app:tRightText="@string/right_text"
        app:tRightVisible="false"
        app:tTitle="@string/title_text" />

    <com.demo.wpq.mydemo.customview.view.DirectionView
        android:id="@+id/directionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:clickable="true" />

</LinearLayout>