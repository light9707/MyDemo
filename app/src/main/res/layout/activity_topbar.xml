<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:top="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alpha_30_black"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:clipToPadding="false">

            <com.demo.wpq.mydemo.customview.widget.TopBar
                android:id="@+id/topbar0"
                android:layout_width="match_parent"
                android:layout_height="@dimen/topbar_height"
                android:background="@android:color/black"
                top:top_bottomLineDrawable="@android:color/holo_blue_light"
                top:top_bottomLineHeight="3dp"
                top:top_leftBackground="@android:color/holo_red_dark"
                top:top_leftImageSrc="@drawable/ic_back"
                top:top_leftPadding="10dp"
                top:top_leftText="返回"
                top:top_rightBackground="@android:color/holo_red_dark"
                top:top_rightImageSrc="@drawable/ic_back"
                top:top_rightText="分享"
                top:top_title="标题0"
                />

            <com.demo.wpq.mydemo.customview.widget.TopBar
                android:id="@+id/topbar1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/topbar_height"
                android:layout_marginTop="5dp"
                android:background="@android:color/holo_blue_dark"
                top:top_bottomLineDrawable="@drawable/banner_demo_img"
                top:top_bottomLineHeight="5dp"
                top:top_leftBackground="@android:color/holo_orange_dark"
                top:top_leftImageSrc="@drawable/ic_back"
                top:top_rightBackground="@android:color/holo_orange_light"
                top:top_rightText="分享"
                top:top_rightTextColor="@android:color/holo_red_dark"
                top:top_rightTextSize="16sp"
                top:top_titleTextColor="#00FF00"
                top:top_titleTextSize="20sp"
                />

            <com.demo.wpq.mydemo.customview.widget.TopBar
                android:id="@+id/topbar2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/topbar_height"
                android:layout_marginTop="5dp"
                android:background="@android:color/black"
                top:top_leftBackground="@android:color/holo_red_dark"
                top:top_leftPadding="10dp"
                top:top_leftText="@string/left_text"
                top:top_rightBackground="@android:color/holo_red_dark"
                top:top_rightImageSrc="@drawable/ic_share"
                top:top_title="@string/title_text"
                top:top_titleTextColor="@android:color/holo_red_light"
                />

            <com.demo.wpq.mydemo.customview.widget.TopBar
                android:id="@+id/topbar3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/topbar_height"
                android:layout_marginTop="5dp"
                android:background="@android:color/holo_blue_dark"
                top:top_leftBackground="@android:color/holo_orange_dark"
                top:top_leftImageSrc="@drawable/ic_back"
                top:top_titleTextColor="#00FF00"
                top:top_titleTextSize="20sp"
                />

            <com.demo.wpq.mydemo.customview.widget.CommonTitleBar
                android:id="@+id/commonTitleBar0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                top:tb_centerText="呵呵哒"
                top:tb_rightImageSrc="@drawable/ic_share"/>

            <com.demo.wpq.mydemo.customview.widget.CommonTitleBar
                android:id="@+id/commonTitleBar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                top:tb_centerText="呵呵哒"
                top:tb_rightText="历史记录"/>

            <com.demo.wpq.mydemo.customview.widget.CommonTitleBar
                android:id="@+id/commonTitleBar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                top:tb_centerImageSrc="@drawable/ic_arrow_down_white"
                top:tb_centerText="呵呵哒"
                top:tb_rightText="保存"/>

            <com.demo.wpq.mydemo.customview.widget.MarqueeTextView
                android:id="@+id/marquee_textView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/remind_bgcolor"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="8dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="滚滚长江东逝水，浪花淘尽英雄，是非成败转头空，青山依旧在，几度夕阳红；白发渔樵江渚上，惯看秋月春风，一壶浊酒喜相逢，古今多少事，都付笑谈中.."
                android:textColor="@color/remind_textcolor"
                android:textSize="14sp"/>

            <com.demo.wpq.mydemo.customview.widget.DirectionView
                android:id="@+id/directionView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:clickable="true"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>