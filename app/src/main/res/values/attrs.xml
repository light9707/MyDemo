<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 自定义标题栏，标题在中间，代码中创建布局 -->
    <declare-styleable name="TopBar">
        <!-- 中间标题 -->
        <attr name="top_title" format="string"/>
        <attr name="top_titleTextColor" format="color"/>
        <attr name="top_titleTextSize" format="dimension"/>
        <!-- 左边 -->
        <attr name="top_leftPadding" format="dimension"/>
        <attr name="top_leftImageSrc" format="reference"/>
        <attr name="top_leftText" format="string"/>
        <attr name="top_leftTextSize" format="dimension"/>
        <attr name="top_leftTextColor" format="color"/>
        <attr name="top_leftBackground" format="reference|color"/>
        <!-- 右边 -->
        <attr name="top_rightPadding" format="dimension"/>
        <attr name="top_rightImageSrc" format="reference"/>
        <attr name="top_rightText" format="string"/>
        <attr name="top_rightTextSize" format="dimension"/>
        <attr name="top_rightTextColor" format="color"/>
        <attr name="top_rightBackground" format="reference|color"/>
        <!-- 底部分割线 -->
        <attr name="top_bottomLineDrawable" format="reference|color"/>
        <attr name="top_bottomLineHeight" format="dimension"/>
    </declare-styleable>

    <!-- 自定义标题栏，标题在中间，引用xml布局 -->
    <declare-styleable name="CommonTitleBar">
        <!-- 中间标题 -->
        <attr name="tb_title" format="string"/>
        <!-- 右边 -->
        <attr name="tb_rightImageSrc" format="reference"/>
        <attr name="tb_rightText" format="string"/>
    </declare-styleable>

    <!-- 有百分比的圆圈progressdialog -->
    <declare-styleable name="QLKCircleProgressBar">
        <attr name="mlpb_inner_radius" format="dimension"/>
        <attr name="mlpb_background_color" format="color"/>
        <attr name="mlpb_progress_color" format="color"/>
        <attr name="mlpb_progress_stoke_width" format="dimension"/>
        <attr name="mlpb_show_arrow" format="boolean"/>
        <attr name="mlpb_enable_circle_background" format="boolean"/>
        <attr name="mlpb_arrow_width" format="dimension"/>
        <attr name="mlpb_arrow_height" format="dimension"/>

        <attr name="mlpb_progress" format="integer"/>
        <attr name="mlpb_max" format="integer"/>

        <attr name="mlpb_progress_text_size" format="dimension"/>
        <attr name="mlpb_progress_text_color" format="color"/>

        <!--<attr name="mlpb_progress_text_offset" format="dimension"/>-->

        <attr name="mlpb_progress_text_visibility" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="PullZoomView">
        <attr name="pzv_sensitive" format="float"/>
        <attr name="pzv_isZoomEnable" format="boolean"/>
        <attr name="pzv_isParallax" format="boolean"/>
        <attr name="pzv_zoomTime" format="integer"/>
    </declare-styleable>

    <!-- ImageView按原图宽高比适配 -->
    <declare-styleable name="KeepProportionImageView">
        <attr name="width_to_height_radio" format="reference|float"/>
    </declare-styleable>
</resources>